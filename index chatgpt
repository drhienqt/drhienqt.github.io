  <script>
    const productList = document.getElementById('product-list');

    const products = [
      {name: 'Sản phẩm 1', price: '200.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc1'},
      {name: 'Sản phẩm 2', price: '250.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc2'},
      {name: 'Sản phẩm 3', price: '300.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc3'},
      {name: 'Sản phẩm 4', price: '180.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc4'},
      {name: 'Sản phẩm 5', price: '220.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc5'},
      {name: 'Sản phẩm 6', price: '270.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc6'},
      {name: 'Sản phẩm 7', price: '320.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc7'},
      {name: 'Sản phẩm 8', price: '210.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc8'},
      {name: 'Sản phẩm 9', price: '260.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc9'},
      {name: 'Sản phẩm 10', price: '230.000đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/abc10'}
    ];

    function renderProducts() {
      productList.innerHTML = '';
      products.forEach(p => {
        const div = document.createElement('div');
        div.classList.add('product');
        div.innerHTML = `
          <img src="${p.img}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>${p.price}</p>
          <a href="${p.link}" target="_blank" rel="noopener noreferrer">Tìm hiểu thêm</a>
        `;
        productList.appendChild(div);
      });
    }

    function addProduct() {
      const newProduct = {name: 'Sản phẩm mới', price: '0đ', img: 'https://via.placeholder.com/200x150', link: 'https://aff.li/new'};
      products.push(newProduct);
      renderProducts();
    }

    renderProducts();
  </script>
